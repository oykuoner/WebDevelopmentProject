
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">User Management /</span>Kullanıcılar    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">

        <div class="table-responsive text-nowrap m-5">

            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="User" asp-action="UserAdd">User Add  <i class="bx bx-plus"></i>  </a>

            <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0  ">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Email Confirmed</th>
                        <th>Access Failed Count</th>
                        <th>Role</th>

                        <th>Operation</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Email Confirmed</th>
                        <th>Access Failed Count</th>
                        <th>Role</th>

                        <th>Operation</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">




                            <td>@user.FirtsName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@(user.EmailConfirmed ? "Doğrulanmış" : "Doğrulanmamış")</td>
                            <td>@user.AccessFailedCount</td>
                            <td>@user.Role</td>


                            <td>
                                <div class="dropdown">

                                    <a href="#" data-bs-toggle="modal" data-bs-target="#invoicePreviewModal" class="text-body" aria-label="Preview Invoice" title="Preview Invoice">
                                        <i class="bx bx-show mx-1"></i>
                                    </a>

                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu" style="">
                                        @* <a class="btn btn-primary btn-sm me-1" href="@Url.Action("UserUpdate", "User", new { area = "Admin", userId = user.Id })"> *@
                                        <a class="btn btn-primary btn-sm me-1" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="UserUpdate" asp-route-userId="@user.Id">
                                            <i class="bx bxs-edit me-1"></i> Edit
                                        </a>
                                        <a class="btn btn-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="HardDelete" asp-route-userId="@user.Id">
                                            <i class="bx bx-minus-circle"></i> Delete
                                        </a>
                                        
                                    </div>

                                </div>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

</div>
@section Scripts{
    <script src="~/js/userIndex.js" type="text/javascript"></script>

    }

