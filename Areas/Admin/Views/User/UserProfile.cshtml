@model UserProfileDto


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Profile Settings /</span> My Profile</h4>

    <div class="row">
        <div class="col-md-12">

            <div class="card mb-4">
                <h5 class="card-header">Profile Details</h5>
                <!-- Account -->

                <hr class="my-0">
                <div class="card-body">
                    <form   asp-controller="User" asp-action="UserProfile" method="POST">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">


                            <div class="mb-3 col-md-6">
                                <label asp-for="FirtsName" class="form-label">First Name</label>
                                <input asp-for="FirtsName" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="FirtsName"></span>
                            </div>


                            <div class="mb-3 col-md-6">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="LastName"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="Email" class="form-label">E-Mail Address</label>
                                <input asp-for="Email" class="form-control" type="email" autofocus="">
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                                <input asp-for="CurrentPassword" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="CurrentPassword"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="NewPassword" class="form-label">NewPassword(Optional)</label>
                                <input asp-for="NewPassword" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="NewPassword"></span>
                            </div>



                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">Profile Update</button>

                        </div>
                    </form>
                </div>
                <!-- /Account -->
            </div>

        </div>
    </div>
</div>